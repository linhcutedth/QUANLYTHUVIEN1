@model Test.Models.Thedocgia

@{ ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml"; }

<h1>Cập nhật</h1>

<h4>Sản phẩm</h4>
<hr />
<div class="container">
    <form asp-action="Edit" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="IdDg" />
        <div class="form-group">
            <label asp-for="Loaidg" class="control-label"></label>
            <select name="Loaidg" id="Loaidg" class="form-control">
                <option value="@Model.Loaidg" selected>@Model.Loaidg</option>
                <option value="Sinh viên">Sinh viên</option>
                <option value="Giảng viên">Giảng viên</option>
            </select>
            <span asp-validation-for="Loaidg" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="Tinhtrang" class="form-control" type="hidden"></input>
        </div>
        <div class="form-group">
            <input asp-for="Nglapthe" class="form-control" type="hidden"></input>
        </div>
        <div class="form-group">
            <label asp-for="Hotendg" class="control-label"></label>
            <input asp-for="Hotendg" class="form-control"></input>
            <span asp-validation-for="Hotendg" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email" class="control-label"></label>
            <input asp-for="Email" class="form-control" type="email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Diachi" class="control-label"></label>
            <input asp-for="Diachi" class="form-control" />
            <span asp-validation-for="Diachi" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Ngsinh" class="control-label"></label>
            <input asp-for="Ngsinh" class="form-control" />
            <span asp-validation-for="Ngsinh" class="text-danger"></span>
        </div>
        <div class="form-group mt-3">
            <input type="submit" value="Lưu" class="btn btn-primary" />
        </div>
    </form>
</div>
<div>
    <a asp-action="Index" class="mt-3">
        Trở về trang danh sách
    </a>
</div>

