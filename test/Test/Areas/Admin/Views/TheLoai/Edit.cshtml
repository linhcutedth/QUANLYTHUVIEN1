@model Test.Models.Theloai

@{ ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml"; }

<h1>Cập nhật</h1>

<h4>Sản phẩm</h4>
<hr />
<div class="container">
    <form asp-action="Edit" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="IdTheloai" />
        <div class="form-group">
            <label asp-for="Tentheloai" class="control-label"></label>
            <textarea asp-for="Tentheloai" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Tentheloai" class="text-danger"></span>
        </div>
        <div class="form-group mt-3">
            <input type="submit" value="Lưu" class="btn btn-primary" />
        </div>
    </form>
</div>
<div>
    <a asp-action="Index" class="mt-3">
        Trở về trang danh sách
    </a>
</div>

