@page "/admin/set-member-password/{id}"
@model App.Admin.User.SetPasswordModel
@{
    ViewData["Title"] = "Đặt mật khẩu";
    Layout = "_Layout";
}

<div class="card">
    <div class="card-header">
        <h4>Thiết lập mật khẩu cho thành viên: @Model.user.UserName</h4>
    </div>
    <div class="card-body">
        <partial name="_StatusMessage" model="@Model.StatusMessage"></partial>
        <div class="row">
            <div class="col-md-6">
                <form id="set-password-form" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.NewPassword"></label>
                        <input asp-for="Input.NewPassword" class="form-control" />
                        <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.ConfirmPassword"></label>
                        <input asp-for="Input.ConfirmPassword" class="form-control" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Đặt mật khẩu</button>
                    <a class="btn btn-primary" asp-page="./Index">Danh sách thành viên</a>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}